<?xml version="1.0"?>
<robot name="robot">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

   <material name="green">
    <color rgba="0 0.8 0 1"/>
  </material>

  <material name="gray">
    <color rgba="0.8 0.8 0.8 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.3"/>
      </geometry>
      <origin xyz="0.1 0 0"/>
      <material name="gray"/>
    </visual>
    <inertial>
      <mass value="15"/>
      <inertia ixx="0.3125" ixy="0" ixz="0"
       iyy="0.5625" iyz="0" izz="0.65"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.6 0.6 0.35"/>
      </geometry>
      <origin xyz="0.1 0 -0.05"/>
    </collision>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="2.5"/>
      <inertia ixx="0.016" ixy="0" ixz="0"
       iyy="0.016" iyz="0" izz="0.028"/>
    </inertial>
  </link>

  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin rpy="-1.5708 0 0" xyz="0 0.25 -0.1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="2.5"/>
      <inertia ixx="0.016" ixy="0" ixz="0"
       iyy="0.016" iyz="0" izz="0.028"/>
    </inertial>
  </link>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="-1.5708 0 0" xyz="0 -0.25 -0.1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="laser_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 -0.025"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin rpy="0 0 0.785" xyz="0.3 0.1 0.25"/>
  </joint>

  <link name="charge_plate">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.05"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <joint name="base_to_charge" type="fixed">
    <parent link="base_link"/>
    <child link="charge_plate"/>
    <origin rpy="1.5708 0 0" xyz="0.25 -0.225 0.07"/>
  </joint>

  <gazebo>
    <plugin 
     filename="gz-sim-sensors-system"
     name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>

  <gazebo reference="laser_link">
    <sensor name="laser" type="gpu_lidar">
      <pose relative_to="laser_link"> 0 0 0 0 0 0 </pose>
      <update_rate>10</update_rate>
      <topic>scan</topic>
      <gz_frame_id>laser_link</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.05</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </lidar>
      <always_on>1</always_on>
      <visualize>1</visualize>
    </sensor>
  </gazebo>

</robot>

