<?xml version="1.0"?>
<robot name="runner">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="gray">
    <color rgba="0.8 0.8 0.8 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.3"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="laser_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 -0.025"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin rpy="0 0 0.785" xyz="0.2 0.1 0.25"/>
  </joint>
</robot>
